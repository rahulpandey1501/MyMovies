<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/movie_root_layout"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A8000000"
    android:fillViewport="true"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.rahul.mymovies.MovieContent"
    tools:showIn="@layout/activity_movie_content">

    <ScrollView
        android:layout_width="match_parent"
        android:background="#90000000"
        android:layout_above="@+id/adView"
        android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/movie_layout"
        android:orientation="vertical">
        <ImageView
            android:layout_width="200dp"
            android:visibility="visible"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/image"/>
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            style="@style/CustomTextShadow"
            android:text="loading ..."
            android:id="@+id/title"/>
        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:id="@+id/ratingBar"
            android:visibility="gone"
            android:numStars="5"
            android:stepSize="0.5"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextShadow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Info"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#ffffff"
            style="@style/CustomTextShadow"
            android:textStyle="bold"
            android:text="Release : loading ..."
            android:id="@+id/release"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            style="@style/CustomTextShadow"
            android:text="Genre : loading ..."
            android:id="@+id/genre"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            style="@style/CustomTextShadow"
            android:text="Time : loading ..."
            android:id="@+id/duration"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            style="@style/CustomTextShadow"
            android:text="loading ..."
            android:id="@+id/rating"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            style="@style/CustomTextShadow"
            android:layout_height="wrap_content"
            android:text="Director : loading ..."
            android:id="@+id/director"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            style="@style/CustomTextShadow"
            android:textStyle="bold"
            android:text="Writer : loading ..."
            android:id="@+id/writer"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#ffffff"
            style="@style/CustomTextShadow"
            android:textStyle="bold"
            android:text="Cast : loading ..."
            android:id="@+id/cast"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextShadow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Story"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

        </LinearLayout>
        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textSize="20sp"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textStyle="bold"-->
            <!--style="@style/CustomTextShadow"-->
            <!--android:text="Story :-"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            style="@style/CustomTextShadow"
            android:text="loading ..."
            android:id="@+id/story"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:id="@+id/arrow_conatiner_layout"
            android:layout_marginTop="12dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CustomTextShadow"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Download Links"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:background="#ffffff"
                android:layout_height="1dp">
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:visibility="gone"
                android:id="@+id/arrow_imageview"
                android:src="@android:drawable/arrow_up_float"/>
        </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_download">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</ScrollView>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="SMART_BANNER"
        android:background="#90000000"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>
